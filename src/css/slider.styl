@import './slide.styl'

.bf-actions-slider
    &__content
      overflow hidden
      height 260px
      margin 3.5em auto 0

    &__track
      height 100%
      white-space nowrap
      overflow hidden
      transition: 1s transform ease

    &__dots
      padding 4em 0
      text-align center
      min-height 14px

    &__dot
      display inline-block
      width: 12px;
      height: 12px;
      border: solid 1px #979797;
      border-radius 50%
      margin 0 4px

      &.active
        background-color #d8d8d8
